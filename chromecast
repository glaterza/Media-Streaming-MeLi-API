url = "https://api.mercadolibre.com/sites/MLA/search?category=MLA352001"
response = requests.get(url)
data = json.loads(response.text) 
data


results = data['results']
results
f = pd.DataFrame(results, columns =['id','title','seller','price','currency_id','available_quantity','listing_type_id','condition','accepts_mercadopago','state_name','city_name','catalog_product_id'])